#
# PVs for communication, generic serial records. We use 2 records, one for
# output and one for input in order to eliminate frequent mode
# switching of TMOD = "Write" or "Read" in the SNL program.  Note that
# both records have the format set to "Hybrid" in order to
# allow lines longer than 40 characters to be sent and received from SMART.
#
grecord(serial, "$(P)$(R)smartOut") {
        field(INP,"#C$(C) S0 @$(IPSLOT)-Serial[$(CHAN)]")
        field(ODEL,"-1")
        field(TMOD,"Write")
        field(OFMT,"Hybrid")
        field(BAUD,"$(BAUD)")
        field(PRTY,"None")
        field(DBIT,"8")
        field(SBIT,"1")
}
grecord(serial, "$(P)$(R)smartIn") {
        field(INP,"#C$(C) S0 @$(IPSLOT)-Serial[$(CHAN)]")
        field(IDEL,"13")
        field(TMOD,"Read")
        field(IFMT,"Hybrid")
        field(BAUD,"$(BAUD)")
        field(PRTY,"None")
        field(DBIT,"8")
        field(SBIT,"1")
}
