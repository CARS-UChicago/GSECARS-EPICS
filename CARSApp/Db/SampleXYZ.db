grecord(dfanout,"$(P)$(XYZ):TWV") {
        field(DOL, "$(P)$(XYZ):TWV.VAL")
        field(OMSL,"closed_loop")
        field(OUTA,"$(P)($X).TWV CA MS")
        field(OUTB,"$(P)($Y).TWV CA MS")
}

grecord(dfanout,"$(P)$(XYZ):STOP") {
        field(DOL,"$(P)$(XYZ):STOP.VAL")
        field(OMSL,"closed_loop")
        field(OUTA,"$(P)($X).SPMG CA MS")
        field(OUTB,"$(P)($Y).SPMG CA MS")
        field(OUTC,"$(P)($Z).SPMG CA MS")
}
