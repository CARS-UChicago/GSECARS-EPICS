# This database contains fields used to allow
# communication between XRF_Collector and clients

grecord(mbbo,"$(P)$(Q):Status") {
	field(DESC,"Read State")
        field(ZRVL,"0")
        field(ZRST,"Done")
        field(ONVL,"1")
        field(ONST,"Collecting")
        field(TWVL,"2")
        field(TWST,"Writing")
        field(THVL,"3")
        field(THST,"Not Connected")

}

grecord(mbbo,"$(P)$(Q):Mode") {
	field(DESC,"Automatic/Manual Collection Mode")
        field(ZRVL,"0")
        field(ZRST,"Manual")
        field(ONVL,"1")
        field(ONST,"Automatic")
}
 
grecord(ao,"$(P)$(Q):CountTime") {
	field(DESC,"XRF Collect Time")
        field(PREC,"2")
	field(VAL,"1.0")
}

grecord(mbbo,"$(P)$(Q):Start") {
	field(DESC,"Cliect Requests Collection")
        field(ZRVL,"0")
        field(ZRST,"Stop")
        field(ONVL,"1")
        field(ONST,"Start")
        field(TWVL,"2")
        field(TWST,"Pause")
        field(THVL,"3")
        field(THST,"Resume")
}

grecord(stringin,"$(P)$(Q):host") {
        field(DTYP,"Soft Channel") 
	field(DESC, "file host")
	field(VAL,  "")
}

grecord(stringin,"$(P)$(Q):dir") {
        field(DTYP,"Soft Channel") 
	field(DESC, "file directory")
	field(VAL,  "")
}

grecord(stringin,"$(P)$(Q):filebase") {
        field(DTYP,"Soft Channel") 
	field(DESC, "file base name")
	field(VAL,  "")
}

grecord(stringin,"$(P)$(Q):format") {
        field(DTYP,"Soft Channel") 
	field(DESC, "file format string")
	field(VAL,  "%s_xrf.%3i")
}


grecord(stringin,"$(P)$(Q):fileext") {
        field(DTYP,"Soft Channel") 
	field(DESC, "file extesion")
	field(VAL,  "")
}


