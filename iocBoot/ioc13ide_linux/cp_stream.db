# Mirion CryoPulse serial interface

record(ai, "$(P)$(R):coldtip"){
    field(DESC, "coldtip temperature (C)")
    field(DTYP, "stream")
    field(INP,  "@cp_stream.proto coldtip $(PORT)")
    field(EGU,  "C")
    field(PREC, "2")
    field(SCAN, "1 second")
    field(PINI, "YES")
   }

