# This database contains fields used to allow
# communication between scan saving clients
# and server

grecord(mbbo,"$(P)$(Q):ExecState") {
	field(DESC,"Scanner State")
        field(ZRVL,"0")
        field(ZRST,"Done")
        field(ONVL,"1")
        field(ONST,"Starting")
        field(TWVL,"2")
        field(TWST,"Collecting")
        field(THVL,"3")
        field(THST,"Finishing")
        field(FRVL,"4")
        field(FRST,"Not Connected")
        field(FVVL,"5")
        field(FVST,"Severe Error")
}
 
grecord(mbbo,"$(P)$(Q):Request") {
	field(DESC,"Client Request")
        field(ZRVL,"0")
        field(ZRST,"Stop")
        field(ONVL,"1")
        field(ONST,"Start")
        field(TWVL,"2")
        field(TWST,"Pause")
        field(THVL,"3")
        field(THST,"Resume")
}

grecord(waveform,"$(P)$(Q):status")  {
       field(DTYP,"Soft Channel")
       field(DESC,"scanner status")
       field(NELM,"128")
       field(FTVL,"CHAR")
}

grecord(stringin,"$(P)$(Q):clientID") {
        field(DTYP,"Soft Channel") 
	field(DESC, "Client ID")
	field(VAL,  "0")
}

grecord(stringin,"$(P)$(Q):serverID") {
