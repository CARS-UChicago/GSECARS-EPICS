
record(longin, "$(DEVICE)DDR_HB") {
        field(DTYP, "Soft Channel")
        field(SCAN, "I/O Intr")
        field(FLNK, "$(DEVICE)DDR_MONITOR PP")
}

record(waveform, "$(DEVICE)DDR_MONITOR") {
        field(DESC, "DDR data buffer")
        field(DTYP, "Soft Channel")
        field(NELM, "$(NELM)")
        field(FTVL, "SHORT")
        field(FLNK, "$(DEVICE)DDR_CHUNK_MONITOR")
}

record(subArray, "$(DEVICE)DDR_CHUNK_MONITOR") {
        field(DESC, "DDR data chunk")
        field(DTYP, "Soft Channel")
        field(INP, "$(DEVICE)DDR_MONITOR")
        field(INDX, "0")
        field(NELM, "256")
        field(MALM, "$(NELM)")
        field(FTVL, "SHORT")
        field(FLNK, "$(DEVICE)DDR_FINISHED_MONITOR PP")
}

record(longout, "$(DEVICE)DDR_CHUNK_LENGTH_SP") {
        field(DESC, "DDR data chunk length")
        field(OUT, "$(DEVICE)DDR_CHUNK_MONITOR.NELM")
        field(VAL, "256")
        field(PINI, "YES")
}

record(longout, "$(DEVICE)DDR_CHUNK_INDEX_SP") {
        field(DESC, "DDR data chunk size")
        field(OUT, "$(DEVICE)DDR_CHUNK_MONITOR.INDX")
        field(VAL, "0")
        field(PINI, "YES")
}

record(calc, "$(DEVICE)DDR_FINISHED_MONITOR") {
        field(CALC, "A+1")
        field(INPA, "$(DEVICE)DDR_FINISHED_MONITOR PP")
}
